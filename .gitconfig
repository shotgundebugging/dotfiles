[user]
	name = Mircea Mare
	email = shotgundebugging@users.noreply.github.com
[alias]
	co = checkout
  st = status
  ci = commit
  co = checkout
  br = branch
  ff = merge --ff-only
  noff = merge --no-ff
  l = "!source ~/.githelpers && pretty_git_log"
	f = fetch
  fp = fetch --prune
  ds = diff --stat=160,120
  dh1 = diff --name-only HEAD~1
  bnr = log --branches --not --remotes
  g = log -n
	r = !GIT_NO_PAGER=1 git l -10
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[core]
	excludesfile = /Users/mircea/.gitignore
	editor = atom --wait
	autocrlf = input
  pager = cat
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
	user = shotgundebugging
[push]
	default = current
[branch]
	autosetupmerge = always
	autosetuprebase = always
[merge]
	tool = kdiff3
[mergetool]
	keepBackup = false
[commit]
  template = ~/.gitmessage
